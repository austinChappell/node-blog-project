<% include partials/header %>

<div class="container">

  <h1 id="page-title">Edit Blog Post</h1>

  <form class="new-post" action="/blogs/<%= post._id %>/edit?_method=PUT" method="POST">

    <div class="form-group">
      <label for="title">Post Title</label>
      <br />
      <input class="full-width-input" type="text" name="title" value="<%= post.title %>" required />
    </div>

    <div class="flex-form">

      <div class="form-group half-width">
        <label for="image">Image URL</label>
        <br />
        <input type="text" name="image" value="<%= post.post.image %>" />
      </div>

    </div>

    <div class="form-group">
      <label for="content">Post Content</label>
      <br />
      <textarea class="full-width-input" type="text" name="content" rows="20" cols="80" required ><%= post.post.stringContent %></textarea>
    </div>

    <div class="flex-form">

      <div class="form-group half-width">
        <label for="citationName">Citation Website Name (if applicable)</label>
        <br />
        <input type="text" name="citationName" value="<%= post.site.name %>" />
      </div>

      <div class="form-group half-width">
        <label for="citationUrl">Citation Website URL</label>
        <br />
        <input type="text" name="citationUrl" value="<%= post.site.url %>" />
      </div>

    </div>

    <div class="form-buttons">
      <input class="write-post" id="write-post" type="submit" value="Publish">
      <input class="delete-button" id="cancel-edit" type="reset" value="Cancel" />
    </div>

  </form>

</div>

<% include partials/footer %>
